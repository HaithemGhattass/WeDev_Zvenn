                        {{  form_errors(registrationForm.nom)}}
                        {{  form_errors(registrationForm.prenom)}}
                        {{  form_errors(registrationForm.email)}}
                        {{  form_errors(registrationForm.numTel)}}
                        {{  form_errors(registrationForm.adresse)}}
                        {{  form_errors(registrationForm.pseudo)}}
                        {{  form_errors(registrationForm.plainPassword.first)}}
                        {{  form_errors(registrationForm.agreeTerms)}}
                    </div>
                    {% endif %}


                    <form action="#" method="GET">
                        <div class="form-group form-box">
                            {{ form_widget(registrationForm.email,{'attr':{
                                'placeholder':'Ecrire votre email'
                            }}) }}
                        </div>
                        <div class="row">
                        <div class="col">

                        <div style="" class="form-group form-box">
                            {{ form_widget(registrationForm.nom,{'attr':{
                                'placeholder':'Ecrire votre nom'
                            }}) }}

                        </div>
                        <div class="form-group form-box">
                            {{ form_widget(registrationForm.prenom,{'attr':{
                                'placeholder':'Ecrire votre prenom'
                            }}) }}
                                               </div>
                        <div class="form-group form-box">
                            {{ form_widget(registrationForm.pseudo,{'attr':{
                                'placeholder':'Ecrire votre pseudo'
                            }}) }}

                        </div>
                            <div class="form-group form-box">


                                {{ form_widget(registrationForm.plainPassword.first,{'attr':{
                                    'placeholder':'Ecrire votre Password'
                                }}) }}
                            </div>
                            <div class="form-group form-box">
                                {{ form_widget(registrationForm.plainPassword.second,{'attr':{
                                    'placeholder':'Repeter votre Password'
                                }}) }}

                        </div>



                            <div class="checkbox form-group clearfix">
                                <div class="form-check float-start">

                                    {{ form_widget(registrationForm.agreeTerms)}}


                                    </label>
                                </div>
                            </div>

                        </div>
                        <div class="col">
                            <div class="form-group form-box">
                                {{ form_widget(registrationForm.adresse,{'attr':{
                                    'placeholder':'Ecrire votre nom adresse'
                                }}) }}

                            </div>

                            <div class="form-group form-box">
                                {{ form_widget(registrationForm.numTel,{'attr':{
                                    'placeholder':'Ecrire votre numero'
                                }}) }}

                            </div>
                            <div class="form-group form-box">
                            {{ form_widget(registrationForm.sexe)}}
                        </div>
                        <div class="form-group form-box">
                            {{ form_widget(registrationForm.dateNaissance)}}
                        </div>


                        </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-lg btn-theme">Login</button>
                        </div>
                        {{ form_row(registrationForm._token) }}

                    </form>

                    {{ form_end(registrationForm) }}
