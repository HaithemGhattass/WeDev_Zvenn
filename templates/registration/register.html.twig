<div class="login-8">
    <div class="container">
        <div class="row login-box">
            <div class="col-lg-15 form-section">
                <div class="form-inner">

                    <a  href="{{ path('app_home_front') }}">
                        <img src="{{ asset('logo.png') }}" width="15%" height="10%" alt="">
                    </a>
                    <h3 style="margin-top: 10px">Cr√©e votre compte</h3>

                    {{ form_start(registrationForm,{'attr':{'novalidate': 'novalidate'}}) }}
                    {% for flashs in app.flashes('message') %}
                        <div class="alert alert-danger">  {{  flashs }} </div>
                    {% endfor %}

                    {% if (form_errors(registrationForm.agreeTerms)) or (form_errors(registrationForm.plainPassword.first)) or ( form_errors(registrationForm.pseudo)) or ( form_errors(registrationForm.adresse)) or (form_errors(registrationForm.nom)) or (form_errors(registrationForm.prenom)) or (form_errors(registrationForm.email)) or (form_errors(registrationForm.numTel))%}
